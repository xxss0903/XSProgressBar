<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <com.xxss0903.xsprogressbar.CustomProgressView
            android:id="@+id/progress1"
            android:background="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:progressType="line"
            app:progressTextSize="10sp"
            app:progressHeight="8dp"
            app:progressDrawIndicator="false"
            app:progressTextPosition="top"
            app:progressDrawText="true"
            app:progressBgColor="@color/colorPrimary"
            app:layout_constraintHorizontal_bias="0.078"
            app:layout_constraintVertical_bias="0.071"/>

    <com.xxss0903.xsprogressbar.CustomProgressView
            android:id="@+id/progress2"
            android:background="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:progressType="circle"
            app:progressTextSize="10sp"
            app:progressHeight="8dp"
            app:progressDrawIndicator="false"
            app:progressTextPosition="top"
            app:progressDrawText="true"
            app:layout_constraintHorizontal_bias="0.078"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/progress5"/>

    <com.xxss0903.xsprogressbar.CustomProgressView
            android:id="@+id/progress3"
            android:background="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:progressType="circle"
            app:progressTextSize="10sp"
            app:progressHeight="8dp"
            app:progressBgColor="@color/colorPrimaryDark"
            app:progressDrawIndicator="true"
            app:progressTextPosition="center"
            app:progressDrawText="true" app:layout_constraintHorizontal_bias="0.225"
            app:layout_constraintVertical_bias="0.054" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/progress2"/>

    <com.xxss0903.xsprogressbar.CustomProgressView
            android:id="@+id/progress4"
            android:background="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:progressType="line"
            app:progressTextSize="26sp"
            app:progressHeight="10dp"
            app:progressDrawIndicator="true"
            app:progressTextPosition="center"
            app:progressDrawText="true"
            app:progressIndicatorSize="12dp"
            app:layout_constraintHorizontal_bias="0.078"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/progress1"/>
    <com.xxss0903.xsprogressbar.CustomProgressView
            android:id="@+id/progress5"
            android:background="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:progressType="line"
            app:progressTextSize="14sp"
            app:progressHeight="10dp"
            app:progressDrawIndicator="true"
            app:progressTextPosition="center"
            app:progressDrawText="true"
            app:progressIndicatorSize="12dp"
            app:layout_constraintHorizontal_bias="0.078"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/progress4"/>
    <android.support.design.internal.BaselineLayout
            android:id="@+id/line_center"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Start"
            android:id="@+id/btn_start"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/line_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />


    <Button
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/line_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:id="@+id/btn_reset"/>
</android.support.constraint.ConstraintLayout>