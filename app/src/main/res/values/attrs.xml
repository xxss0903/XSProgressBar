<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomProgressView">
        <attr name="progressTextColor" format="color"/>
        <attr name="progressTextSize" format="dimension"/>
        <attr name="progressText" format="string"/>
        <attr name="progressIndicator" format="reference"/>
        <attr name="progressIndicatorColor" format="color"/>
        <attr name="progressIndicatorSize" format="dimension"/>
        <attr name="progressColor" format="color"/>
        <attr name="progressType" format="enum">
            <enum name="line" value="1"/>
            <enum name="circle" value="2"/>
        </attr>
        <attr name="progressMargin" format="dimension"/>
        <attr name="progressHeight" format="dimension"/>
        <attr name="progressDrawText" format="boolean"/>
        <attr name="progressDrawIndicator" format="boolean"/>
        <attr name="progressCircleRadius" format="dimension"/>
        <attr name="progressBgColor" format="color"/>
        <attr name="progressCapSize" format="dimension"/>
        <attr name="progressTextPosition" format="enum">
            <enum name="top" value="1"/>
            <enum name="center" value="2"/>
            <enum name="bottom" value="3"/>
        </attr>
    </declare-styleable>

</resources>